      xmlns:local="clr-namespace:Kovalevskaya.Pages" xmlns:components="clr-namespace:Kovalevskaya.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WritesPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource Title}"
