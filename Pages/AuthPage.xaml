<Page x:Class="Kovalevskaya.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kovalevskaya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource Title}" Text="Введите номер полиса ОМС"/>
        <TextBox Style="{DynamicResource TextBoxApp}" Grid.Row="1"/>
        <Button Style="{DynamicResource LogButton}" Grid.Row="2" Content="Войти" Click="Login"/>
    </Grid>
</Page>
